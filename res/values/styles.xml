<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <color name="background_color">#f6eafb</color>
    <style name="LittleTalkersTheme" parent="android:Theme.Holo.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
       
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:spinnerStyle">@style/MySpinners</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:editTextStyle">@style/MyEditText</item> 
        <!--  <item name="android:windowBackground">@color/background_color</item> -->
        <!-- <item name="android:windowBackground">@drawable/background_image</item>  -->
        
    </style>

    <!-- List headers -->
    <style name="list_header">
        <item name="android:textColor">#333333</item>
        <item name="android:background">#33B5E5</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        
    </style>
    
    <style name="MyEditText" parent="android:style/Widget.Holo.Light.EditText">
      <item name="android:textColor">#666666</item>    
    </style>
    
    <style name="MyLabelText" parent="android:style/Widget.Holo.Light.TextView">
      <item name="android:textColor">#33B5E5</item>   
      <item name="android:textStyle">italic</item> 
    </style>
    
    <style name="MyListRowText" parent="android:style/Widget.Holo.Light.TextView">
      <item name="android:textColor">#33B5E5</item>   
    </style>
        
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/light_blue</item>
         <item name="android:titleTextStyle">@style/LittleTalkers.ActionBar.TitleTextStyle</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_littletalkerstheme</item>
    </style>

   <style name="LittleTalkers.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
      <item name="android:textColor">@color/orange</item>
   </style>
    
    <style name="MySpinners" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LittleTalkersTheme.titlebar">
        <item name="android:background">#8ad5f0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
    </style>

</resources>