<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nadajp.littletalkers.KidProfileActivity$PlaceholderFragment" >

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/profile_picture"
        android:background="@drawable/ab_profile_border"/>

    <TextView
        android:id="@+id/headingBirthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivProfilePic"
        android:layout_alignParentLeft="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/date_of_birth" />

    <TextView
        android:id="@+id/tvBirthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_below="@id/ivProfilePic"
        android:layout_toRightOf="@id/headingBirthdate"
        android:paddingTop="5dp" 
        android:paddingBottom="5dp"
        />

    <TextView
        android:id="@+id/headingNumOfWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headingBirthdate"
        android:layout_alignParentLeft="true"
        android:text="@string/number_of_phrases" />

    <TextView
        android:id="@+id/tvNumOfWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headingBirthdate"
        android:layout_toRightOf="@id/headingNumOfWords"
        android:layout_marginLeft="2dp" />
      
    <TextView
        android:id="@+id/headingNumOfQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headingNumOfWords"
        android:layout_alignParentLeft="true"
        android:text="@string/number_of_questions" />

    <TextView
        android:id="@+id/tvNumOfQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headingNumOfWords"
        android:layout_toRightOf="@id/headingNumOfQuestions"
        android:layout_marginLeft="2dp"/>

</RelativeLayout>