        <Spinner
            android:id="@+id/spinnerLanguageFilter"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/titlebar"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/spinnerLanguageFilter"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/header_word"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="50"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="sortByWord"
            android:text="@string/word_or_phrase" />

        <TextView
            android:id="@+id/header_date"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="35"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="sortByDate"
            android:text="@string/date" />

        <TextView
            android:id="@+id/header_audio"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:gravity="center_horizontal"
            android:text="@string/audio" />
    </LinearLayout>

</RelativeLayout>